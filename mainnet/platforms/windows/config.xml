<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="391015" id="com.bcbcanoe.bitcoinblack" ios-CFBundleVersion="1.0.2" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <feature name="Toast" value="Toast" />
    <feature name="QRScanner">
        <param name="windows-package" value="QRScanner" />
    </feature>
    <feature name="NfcPlugin">
        <param name="wp-package" value="NfcPlugin" />
    </feature>
    <name>Bitcoin Black Wallet</name>
    <description>
        Bitcoin Black Wallet
    </description>
    <author email="hello@bitcoin.black" href="http://bitcoin.black">
        Bitcoin Black
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="resources/bcb/windows/icon/StoreLogo.png" target="StoreLogo" />
    <icon src="resources/bcb/windows/icon/Square30x30Logo.png" target="Square30x30Logo" />
    <icon src="resources/bcb/windows/icon/Square44x44Logo.png" target="Square44x44Logo" />
    <icon src="resources/bcb/windows/icon/Square70x70Logo.png" target="Square70x70Logo" />
    <icon src="resources/bcb/windows/icon/Square71x71Logo.png" target="Square71x71Logo" />
    <icon src="resources/bcb/windows/icon/Square150x150Logo.png" target="Square150x150Logo" />
    <icon src="resources/bcb/windows/icon/Square310x310Logo.png" target="Square310x310Logo" />
    <icon src="resources/bcb/windows/icon/Wide310x150Logo.png" target="Wide310x150Logo" />
    <splash height="300" src="resources/bcb/windows/splash/SplashScreen.scale-100.png" width="620" />
    <splash height="1920" src="resources/bcb/windows/splash/SplashScreenPhone.scale-240.png" width="1152" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="WindowsStoreIdentityName" value="------" />
    <preference name="WindowsStoreDisplayName" value="Secure Bitcoin Black Wallet" />
    <preference name="StatusBarBackgroundColor" value="#261454" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="windows-target-version" value="10.0" />
    <preference name="Orientation" value="default" />
    <preference name="cordova-custom-config-stoponerror" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="SplashScreen" value="screen" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="200" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="28" />
</widget>
